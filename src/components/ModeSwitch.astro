<label class="switch">
    <input type="checkbox" />
    <span class="slider"></span>
</label>

<script>
    const darkModeButton = document.querySelector(".switch > input");

    darkModeButton.addEventListener("click", () => {
        const b = document.body;

        if (b.classList.contains("light")) {
            b.classList.add("dark");
            b.classList.remove("light");
        } else {
            b.classList.add("light");
            b.classList.remove("dark");
        }
    });
</script>

<style lang="sass">
    .switch
        position: fixed
        top: 0
        right: 0
        display: inline-block
        width: 2.5rem
        height: 1.5rem
        z-index: 0
        margin: 15px 10px

        input
            opacity: 0
            width: 0
            height: 0

            &:checked
                & + .slider
                    background-color: var(--font)

                & + .slider:before
                    -webkit-transform: translateX(1rem)
                    -ms-transform: translateX(1rem)
                    transform: translateX(1rem)

    .slider
        position: absolute
        cursor: pointer
        top: 0
        left: 0
        right: 0
        bottom: 0
        background-color: var(--font)
        -webkit-transition: 0.4s
        transition: 0.4s
        border-radius: 1rem
        z-index: 0

        &:before
            position: absolute
            content: ""
            height: 1.4rem
            width: 1.4rem
            left: 0.05rem
            bottom: 0.05rem
            background-color: var(--bg)
            border-radius: 50%
            z-index: 0
            -webkit-transition: 0.4s
            transition: 0.4s
</style>
