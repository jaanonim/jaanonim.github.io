---
import Socials from "./Socials.astro";
const today = new Date();
---

<footer class="footer">
  <Socials />
  <div class="footer-credits">
    Created with <span>‚ù§</span> by Jaanonim
    <br /> &copy; 2021 - {today.getFullYear()}
  </div>
</footer>

<style lang="sass">
  @use '../styles/colors.sass'

  .footer
    background-color: colors.$secondary
    margin-top: 5rem
    padding: 2rem

    &-credits
