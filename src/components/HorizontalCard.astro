---
const {
    title,
    img,
    desc,
    url,
    page,
    badge,
    tags,
    target = "_blank",
} = Astro.props;
---

<div
    class="rounded-lg bg-base-100 shadow-md hover:shadow-xl transition ease-in-out hover:scale-[102%] m-2"
>
    <a href={url} target={target}>
        <div class="hero-content flex-col md:flex-row">
            {
                img && (
                    <img
                        src={img}
                        alt={title}
                        class="max-w-full md:max-w-[13rem] rounded-lg"
                    />
                )
            }
            <div class="grow w-full">
                <h1 class="text-xl font-bold">
                    {title}
                    {
                        badge && (
                            <div class="badge badge-secondary mx-2 p-3">
                                {badge}
                            </div>
                        )
                    }
                </h1>
                <p class="py-1 text-1xl">{desc}</p>
                <div class="card-actions justify-end">
                    {page && <div class="badge badge-primary p-3">page</div>}
                    {
                        tags &&
                            tags.map((tag) => (
                                <div class="badge badge-outline p-3">{tag}</div>
                            ))
                    }
                </div>
            </div>
        </div>
    </a>
</div>
